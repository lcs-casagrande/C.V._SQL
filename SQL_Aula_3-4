create table pessoas (
nome,
nacimento,
sexo,
peso,
altura,
nacionalidade
);

#Aula 4
create table pessoas (
id int not null auto_increment,
nome varchar(30) not null,
nacimento date,
sexo enum('M','F'),
peso decimal (5,2),
altura decimal (3,2),
nacionalidade varchar(20) default 'Brasil',
primary key (id)
) default charset = utf8mb3;


#Aula 5
